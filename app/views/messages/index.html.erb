<div class="panel panel-default">
  <div class="panel-heading">
メッセージ一覧
  </div>
  <div class="panel-body">
  <% @messages.each do |message| %>
    <span class="label label-info"><%= message.name %></span><%= message.body %>
    <br>
  <% end %>
  </div>
</div>
<%= form_for(Message.new) do |f| %>
  <div class="container-fluid">
  名前:
  <%= f.text_field :name %>
  </div>
  <div class="container-fluid">
  <span style="margin-top: 0">内容:</span>
  <%= f.text_area :body %>
  </div>
  <%= f.submit %>
<% end %>
